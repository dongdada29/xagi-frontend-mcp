{
  "name": "xagi-frontend-mcp",
  "version": "1.0.2",
  "description": "为 AI Agent 提供前端工程初始化能力的 MCP 工具，支持 React + Next.js、React + Vite、Vue3 + Vite 等现代化技术栈",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-agent",
    "frontend",
    "project-initialization",
    "react",
    "nextjs",
    "vue",
    "vite",
    "typescript",
    "claude",
    "claude-desktop",
    "claude-code",
    "web-development",
    "template-engine"
  ],
  "author": "dongdada29",
  "license": "MIT",
  "homepage": "https://github.com/dongdada29/xagi-frontend-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dongdada29/xagi-frontend-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/dongdada29/xagi-frontend-mcp/issues"
  },
  "files": [
    "dist/",
    "bin/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "cli": "node bin/cli.js",
    "cli:dev": "node bin/cli.js --dev",
    "debug": "node debug-mcp.js",
    "dev-server": "node dev-server.js",
    "prepublishOnly": "npm run build",
    "test": "npm run debug",
    "test:cli": "npm run cli -- --help && npm run cli -- --version",
    "test:npx": "npx . --help && npx . --version",
    "demo": "bash demo-claude-code.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/tar": "^6.1.13",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "xagi-frontend-mcp": "bin/cli.js"
  }
}
